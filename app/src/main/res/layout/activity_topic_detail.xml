<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".TopicDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_topic_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/tv_topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:padding="16dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:background="@color/light_grey_blue"/>


    <LinearLayout
        android:id="@+id/ll_discussion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_green_blue" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawableRight="@drawable/right"
            android:text="Discussion"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_green_blue" />
    </LinearLayout>


</LinearLayout>